<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Cambiar el color de fondo del diálogo -->
        <item name="android:windowBackground">@color/customDialogBackground</item>
<!--       <item name="android:background">@drawable/cycling</item>-->
        <!-- Cambiar el color del texto -->
        <item name="android:textColorPrimary">@color/customDialogText</item>
        <!-- Cambiar el color de los botones -->
        <item name="android:colorAccent">@color/customDialogAccent</item>
        <!-- Otros atributos según tus preferencias -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Otras configuraciones -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>